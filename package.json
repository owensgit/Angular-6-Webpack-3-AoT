{
  "name": "Angular-6-with-Webpack-3-AoT-Lazy-Loading",
  "version": "1.0.0",
  "description": "Simple set up of an Angular 6 application using a custom config for Webpack 3, with lazy loading of module and Ahead of Time compilation, keeping the versions as-is to use a reference for legacy apps.",
  "scripts": {
    "start": "webpack-dev-server --inline --hot --progress --port 8080",
    "build:dev": "cross-env NODE_ENV=development ./node_modules/webpack/bin/webpack.js",
    "build:prod": "cross-env NODE_ENV=production ./node_modules/webpack/bin/webpack.js",
    "build:prod-aot": "cross-env NODE_ENV=prod-aot ./node_modules/webpack/bin/webpack.js"
  },
  "author": "Owen Evans",
  "dependencies": {
    "@angular/common": "^6.1.10",
    "@angular/compiler": "^6.1.10",
    "@angular/core": "^6.1.10",
    "@angular/forms": "^6.1.10",
    "@angular/http": "^6.1.10",
    "@angular/platform-browser": "^6.1.10",
    "@angular/platform-browser-dynamic": "^6.1.10",
    "@angular/platform-server": "^6.1.10",
    "@angular/router": "^6.1.10",
    "core-js": "^3.0.0",
    "rxjs": "6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^6.1.1",
    "@ngtools/webpack": "^1.10.2",
    "@types/jasmine": "~2.8.8",
    "@types/node": "^10.14.1",
    "angular-router-loader": "^0.8.5",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "~3.1.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "~2.1.2",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "htmlhint-loader": "^1.3.1",
    "jasmine-core": "^2.99.1",
    "karma": "^6.3.14",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "raw-loader": "0.5.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.16.1",
    "tslint": "^5.18.0",
